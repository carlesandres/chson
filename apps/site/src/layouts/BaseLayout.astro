---
type Props = {
  title: string;
  description?: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description ? <meta name="description" content={description} /> : null}

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600&family=Space+Grotesk:wght@500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="bg" aria-hidden="true"></div>
    <div class="container">
      <header class="header">
        <a class="brand" href={`${import.meta.env.BASE_URL}`}>ChSON</a>
        <nav class="nav">
          <a href={`${import.meta.env.BASE_URL}`}>Home</a>
          <a href={`${import.meta.env.BASE_URL}cheatsheets/`}>Cheatsheets</a>
          <a href="https://github.com/carlesandres/csif.sh">GitHub</a>
        </nav>
      </header>

      <main class="main">
        <slot />
      </main>

      <footer class="footer">
        <span>ChSON is a JSON format for cheatsheets.</span>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --bg0: #fbfaf8;
    --ink: #151515;
    --muted: #5a5a5a;
    --card: rgba(255, 255, 255, 0.75);
    --stroke: rgba(0, 0, 0, 0.10);
    --shadow: 0 18px 50px rgba(15, 15, 15, 0.08);
    --accent: #0b5bd3;
    --accent2: #d84b2a;
    --radius: 16px;
    color-scheme: light;
  }

  * { box-sizing: border-box; }

  html, body { height: 100%; }

  body {
    margin: 0;
    background: var(--bg0);
    color: var(--ink);
    font-family: "IBM Plex Sans", ui-sans-serif, system-ui, -apple-system, "Segoe UI", sans-serif;
    line-height: 1.55;
  }

  a { color: inherit; text-decoration: none; }
  a:hover { text-decoration: underline; text-underline-offset: 3px; }

  .bg {
    position: fixed;
    inset: -20vh -20vw;
    background:
      radial-gradient(900px 500px at 20% 10%, rgba(11, 91, 211, 0.18), transparent 60%),
      radial-gradient(800px 520px at 85% 15%, rgba(216, 75, 42, 0.16), transparent 62%),
      radial-gradient(900px 700px at 50% 85%, rgba(0, 0, 0, 0.05), transparent 65%);
    filter: blur(10px);
    pointer-events: none;
    z-index: -1;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 28px 18px 54px;
  }

  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    padding: 10px 12px;
    border: 1px solid var(--stroke);
    border-radius: var(--radius);
    background: var(--card);
    backdrop-filter: blur(10px);
    box-shadow: var(--shadow);
  }

  .brand {
    font-family: "Space Grotesk", ui-sans-serif, system-ui, -apple-system, "Segoe UI", sans-serif;
    font-weight: 600;
    letter-spacing: -0.02em;
    padding: 8px 10px;
    border-radius: 12px;
  }

  .nav {
    display: flex;
    gap: 14px;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  .nav a {
    color: var(--muted);
    padding: 6px 10px;
    border-radius: 12px;
  }
  .nav a:hover {
    color: var(--ink);
    background: rgba(0, 0, 0, 0.04);
    text-decoration: none;
  }

  .main { padding: 34px 8px 0; }

  .footer {
    margin-top: 50px;
    color: var(--muted);
    font-size: 14px;
    padding: 18px 10px;
  }

  @media (max-width: 560px) {
    .header { align-items: flex-start; }
    .nav { justify-content: flex-start; }
  }

  @media (prefers-reduced-motion: no-preference) {
    .header { animation: slideIn 420ms ease-out both; }
    .main { animation: fadeUp 520ms 80ms ease-out both; }
    @keyframes slideIn {
      from { opacity: 0; transform: translateY(-8px); }
      to { opacity: 1; transform: translateY(0); }
    }
    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  }
</style>
