---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { formatExample, getAllCheatsheets, loadCheatsheet } from "../../../lib/cheatsheets";

export async function getStaticPaths() {
  return getAllCheatsheets().map((ref) => ({
    params: { product: ref.product, name: ref.name },
    props: { filePath: ref.filePath },
  }));
}

type Props = {
  filePath: string;
};

const { filePath } = Astro.props;
const data = loadCheatsheet(filePath);
const all = getAllCheatsheets();
const ref = all.find((r) => r.filePath === filePath);

const title = data.title || "Cheatsheet";
---

<BaseLayout title={`${title} | ChSON`} description={data.description}>
  <div class="flex flex-wrap items-start justify-between gap-4">
    <div>
      <h1 class="font-display text-[clamp(28px,4.2vw,44px)] font-semibold leading-[1.08] tracking-[-0.03em]">{title}</h1>
      <div class="mt-3 flex flex-wrap gap-2 text-xs text-zinc-600">
        {data.version ? <span>Version: <strong class="font-semibold text-zinc-900">{data.version}</strong></span> : null}
        {data.publicationDate ? <span>Published: <strong class="font-semibold text-zinc-900">{data.publicationDate}</strong></span> : null}
        {ref ? <span class="rounded-full border border-black/10 bg-black/5 px-2 py-0.5 font-mono text-[11px] text-zinc-700">{ref.product}/{ref.name}</span> : null}
      </div>
      <p class="mt-4 max-w-[80ch] text-zinc-600">{data.description}</p>
    </div>
    <div class="flex gap-2">
      <a
        class="inline-flex items-center justify-center rounded-xl border border-black/15 bg-white/60 px-3 py-2 text-sm font-medium shadow-soft hover:border-black/20 hover:no-underline"
        href={`${import.meta.env.BASE_URL}cheatsheets/`}
      >
        All cheatsheets
      </a>
      {ref ? (
        <a
          class="inline-flex items-center justify-center rounded-xl border border-black/15 bg-blue-700/10 px-3 py-2 text-sm font-medium hover:bg-blue-700/15 hover:no-underline"
          href={`https://github.com/carlesandres/csif.sh/blob/main/cheatsheets/${ref.product}/${ref.name}.chson.json`}
        >
          View source
        </a>
      ) : null}
    </div>
  </div>

  {Array.isArray(data.sections) && data.sections.length ? (
    <div class="mt-6 grid gap-5">
      {data.sections.map((section) => (
        <section class="rounded-xl2 border border-black/10 bg-white/70 p-4 shadow-soft">
          <h2 class="text-base font-semibold">{section.title}</h2>
          {section.description ? <p class="mt-1 text-sm text-zinc-600">{section.description}</p> : null}
          <div class="mt-3 overflow-x-auto rounded-xl border border-black/10">
            <table class="w-full min-w-[640px] border-collapse">
              <thead>
                <tr>
                  <th class="border-b border-black/10 bg-black/[0.03] px-3 py-2 text-left text-xs font-semibold text-zinc-600">Example</th>
                  <th class="border-b border-black/10 bg-black/[0.03] px-3 py-2 text-left text-xs font-semibold text-zinc-600">Description</th>
                </tr>
              </thead>
              <tbody>
                {Array.isArray(section.items)
                  ? section.items.map((item) => (
                      <tr>
                        <td class="border-b border-black/5 px-3 py-3 align-top">
                          {formatExample(item.example ?? item.title) ? (
                            <pre class="m-0 overflow-auto rounded-xl border border-black/10 bg-black/[0.04] p-3"><code class="font-mono text-[13px]">{formatExample(item.example ?? item.title)}</code></pre>
                          ) : null}
                        </td>
                        <td class="border-b border-black/5 px-3 py-3 align-top">
                          <div class="font-semibold">{item.title}</div>
                          <div class="mt-1 text-sm text-zinc-600">{item.description}</div>
                        </td>
                      </tr>
                    ))
                  : null}
              </tbody>
            </table>
          </div>
        </section>
      ))}
    </div>
  ) : (
    <p>No sections found.</p>
  )}
</BaseLayout>
