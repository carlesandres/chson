{
  "extends": "stylelint-config-standard",
  "rules": {
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme", "--theme"]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "plugin",
          "custom-variant",
          "utility",
          "theme",
          "source",
          "config"
        ]
      }
    ],
    "media-query-no-invalid": null
  }
}
