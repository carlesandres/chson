          "content": "Quit (fails if unsaved changes).",
          "label": "Quit"
        },
        {
          "anchor": ":wq",
          "content": "Write and quit.",
          "label": "Save and quit"
        },
        {
          "anchor": ":q!",
          "content": "Quit without saving changes.",
          "label": "Force quit"
        },
        {
          "anchor": ":e <file>",
          "content": "Open another file for editing.",
          "label": "Open file"
